<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:browserView="browser-view"
    loaded="pageLoaded" backgroundColor="#00000000">
    <Page.actionBar>
        <ActionBar>
            <ActionBar.titleView margin="0px" padding="0px" >
            <GridLayout id="header" columns="*, auto, auto, auto" rows="auto" horizontalAlignment="stretch">
                <SearchBar col="0" loaded="searchBarLoaded" hint="Enter a URL" />
                <Button col="1" id="layerBtn" class="material-icon action-btn" tap="layerButtonClicked" />
                <Button col="2" id="menuBtn" class="material-icon action-btn" tap="menuButtonClicked" />
            </GridLayout>
            </ActionBar.titleView>
        </ActionBar>
    </Page.actionBar>
    <browserView:BrowserView tap="onTap" loaded="browserViewLoaded" horizontalAlignment="stretch" verticalAlignment="stretch">
        <StackLayout id="menu" loaded="menuLoaded" visibility="collapsed" horizontalAlignment="right" verticalAlignment="top" orientation="vertical">
            <Label class="menuItem" text="New Channel" tap="newChannelClicked"/>
            <Label class="menuItem" text="Bookmarks" tap="bookmarksClicked"/>
            <Label class="menuItem" text="History" tap="historyClicked"/>
            <Label class="menuItem" text="Settings" tap="settingsClicked"/>
        </StackLayout>
    </browserView:BrowserView>
</Page>
